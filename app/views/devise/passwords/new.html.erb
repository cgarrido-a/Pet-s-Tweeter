<div class="container pb-5">
  <h2 class="form-style py-5"><strong>Forgot your password?</strong></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="far fa-envelope"></i></span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email" %>
      </div>  
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-info' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>