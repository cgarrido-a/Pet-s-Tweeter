<div class="row ">
    <% if user_signed_in?%>
        <%= render 'tweets/form', tweet: @tweet %>
    <%end%>

    <div class="w-100 mt-2">
        <%= form_tag(root_path, method: :get) do %>
            <div class="form-group">
                <%= link_to "Clean", root_path, :class => "btn btn-info float-right ml-2" %>
                <%= submit_tag("Search", :class => "ml-2 btn btn-info float-right") %>
                <%= text_field_tag(:search, params[:search], :class => "w-50 float-right form-control d-inline") %>
            </div>
        <% end %>
    </div>

    <% @tweets.each do |tweet| %>
        <%= render 'tweets/single_tweet', tweet: tweet %>
    <% end %>
    <hr>
 
</div>

<div class=" my-4">
    <div class="d-flex justify-content-center">
        <%= paginate @tweets %>
    </div>
</div>
