<div class="container div-style">

  <p id="notice"><%= notice %></p>

  <div class="bg-light p-4 single-tweet">
    <h3><strong> <%= @tweet.user.username %> dice:</strong></h3>
    <em>"<%= @tweet.content %>"</em>

    <h3 class="mt-5"><i class="fas fa-paw text-danger"></i> Likes (<%= @tweet.likes.count %>)</h3>
  
    <% @tweet.liking_users.each do |user| %>
      <%= image_tag(user.avatar, class: 'avatar-in-tweet avatar-show') %>
    <% end %>

  </div>
    
  <%= link_to 'Back', root_path %>
  

  

</div>