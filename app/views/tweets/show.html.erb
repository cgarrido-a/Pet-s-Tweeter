<div class="container div-style ">

  <p id="notice"><%= notice %></p>

  <div class="container bg-light single-tweet tweet-show mb-3">
    <div class="row mb-5  ">
      <div>
        <%= image_tag(@tweet.user.avatar, class: 'img-thumbnail avatar-in-tweet m-3 ') %>
      </div>
      
      <div class="mt-3 col-sm-8">
        <h3 class="d-inline "><strong> <%= @tweet.user.username %> dice:</strong></h3>
        <p class="p-show content"><em>"<%= @tweet.content.html_safe %>"</em></p>
      </div>
      
    </div>
    
    <h3 class=""><i class="fas fa-paw text-danger"></i> Liked by: (<%= @tweet.likes.count %>)</h3>
    <% @tweet.liking_users.each do |user| %>
      <%= image_tag(user.avatar, class: 'avatar-likes-show mb-2') %>
    <% end %>
    
  </div>
  
    
  <%= link_to 'Back', root_path %>
  

</div>