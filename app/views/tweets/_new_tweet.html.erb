<div class="d-flex justify-content-end mt-3 modal-btn">
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap"><i class="fas fa-paw"></i>Write a Tweet</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>

                    <div class="modal-body">
                        <%= render 'tweets/form', tweet: @tweet %>
                     </div>
                </div>
        </div>
    </div>
</div>