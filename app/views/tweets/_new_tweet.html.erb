<div class="">
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap"><i class="fas fa-paw"></i>Write a Tweet</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <i class="fas fa-cat ml-5"></i>
                        <i class="fas fa-kiwi-bird ml-5"></i>
                        <i class="fas fa-fish ml-5"></i>
                        <i class="fas fa-horse ml-5"></i>
                        <i class="fas fa-dog ml-5"></i>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>

                    <div class="modal-body">
                        <%= render 'tweets/form', tweet: @tweet %>
                     </div>
                </div>
        </div>
    </div>
</div>